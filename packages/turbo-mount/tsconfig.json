{
  "compilerOptions": {
    "lib": [
      "es2020",
      "dom"
    ],
    "target": "es2020",
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "rootDir": "src",
    "strict": true,
    "removeComments": true,
    "outDir": "dist",
    "baseUrl": ".",
    "noEmit": false,
    "declaration": false,
    "paths": {
      "turbo-mount": ["src/index"],
      "turbo-mount/registerComponents": ["src/registerComponents"],
      "turbo-mount/*": ["src/plugins/*"]
    },
    "types": [
      "vite/client"
    ]
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
